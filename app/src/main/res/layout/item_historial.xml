<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/itemImagenPlato"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@tools:sample/avatars" /> <TextView
    android:id="@+id/itemTituloPlato"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintStart_toEndOf="@id/itemImagenPlato"
    app:layout_constraintTop_toTopOf="@id/itemImagenPlato"
    app:layout_constraintEnd_toEndOf="parent"
    tools:text="Nombre del Plato" /> <TextView
    android:id="@+id/itemDescripcionPlato"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:maxLines="3"
    android:ellipsize="end"
    app:layout_constraintStart_toStartOf="@id/itemTituloPlato"
    app:layout_constraintTop_toBottomOf="@id/itemTituloPlato"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="@id/itemImagenPlato"
    tools:text="Aquí va una breve descripción de la receta o el análisis nutricional del plato..." /> </androidx.constraintlayout.widget.ConstraintLayout>